<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/frame_edge_distance"
    android:layout_marginEnd="@dimen/frame_edge_distance"
    android:orientation="horizontal">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/poiResultName"
            android:layout_marginTop="@dimen/frame_eight_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize = "end"
            android:textSize="@dimen/frame_edge_distance"
            android:textColor="@color/text_black_color"
            />

        <TextView
            android:id="@+id/poiResultDetail"
            android:layout_marginTop="@dimen/frame_eight_distance"
            android:layout_marginBottom="@dimen/frame_eight_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:maxLines="3"
            android:ellipsize = "end"
            android:textSize="@dimen/frame_eight_distance"
            android:textColor="@color/text_gray_color"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/imgCheck"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/frame_edge_distance"
            android:layout_width="@dimen/frame_32_distance"
            android:layout_height="@dimen/frame_32_distance"
            android:background="@drawable/icon_check"
            android:visibility="invisible">
    </ImageView>
</LinearLayout>