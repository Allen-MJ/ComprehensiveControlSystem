<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_line_color"
    android:padding="@dimen/frame_half_distance">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_32_distance"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textSize="@dimen/frame_text_smaller_size"
                android:textColor="@color/text_gray_color"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/frame_half_distance"
                android:layout_height="match_parent"
                android:background="@color/gray_line_color"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_path"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:textSize="@dimen/frame_text_smaller_size"
                android:textColor="@color/text_gray_color"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/frame_half_distance"
                android:layout_height="match_parent"
                android:background="@color/gray_line_color"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/frame_text_smaller_size"
                android:textColor="@color/text_color_red2pri_selector"
                android:gravity="center"
                android:text="@string/allen_delete_bt"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>