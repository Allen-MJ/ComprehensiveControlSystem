<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp">
        <allen.frame.widget.ScaleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            app:scale="0.4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_alignParentTop="true"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:titleTextColor="@color/text_white_color"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    app:popupTheme="@style/OverflowMenuStyle"
                    app:navigationIcon="@mipmap/ic_logo_back">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        style="@style/Toolbar.TitleText"
                        android:gravity="center"
                        />
                </androidx.appcompat.widget.Toolbar>
                <allen.frame.widget.CircleImageView
                    android:id="@+id/user_photo"
                    android:layout_width="@dimen/frame_60_distance"
                    android:layout_height="@dimen/frame_60_distance"
                    app:border_color="@color/white"
                    app:border_width="@dimen/frame_one_distance"
                    android:layout_marginStart="@dimen/frame_edge_distance"
                    android:layout_marginEnd="@dimen/frame_edge_distance"
                    android:src="@drawable/default_photo"
                    android:layout_marginTop="@dimen/frame_30_distance"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CoreMiddle8Style"
                    android:textColor="@color/text_white_color"
                    android:text="张三"
                    android:layout_marginTop="@dimen/frame_30_distance"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/user_photo"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CoreSmall8Style"
                    android:textColor="@color/text_white_color"
                    android:text="网格员"
                    android:layout_below="@id/user_name"
                    android:layout_toEndOf="@id/user_photo"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_dw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CoreSmall8Style"
                    android:textColor="@color/text_white_color"
                    android:layout_below="@id/user_grade"
                    android:layout_toEndOf="@id/user_photo"/>
            </RelativeLayout>
        </allen.frame.widget.ScaleLinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alen_notice"
            android:layout_margin="@dimen/frame_four_distance"/>
        <allen.frame.widget.VerticalTextview
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:verTextSize="@dimen/frame_text_smaller_size"
            app:verTextColor="@color/text_gray_color"
            app:verPadding="@dimen/frame_four_distance"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!--<allen.frame.widget.MarqueeView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/text_gray_color"
        android:textSize="@dimen/frame_text_smaller_size"
        android:padding="@dimen/frame_four_distance"
        android:drawableStart="@drawable/ic_alen_notice"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/frame_four_distance"
        android:background="@color/gray_line_color"/>-->
    <allen.frame.widget.ContrlScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:iscanscroll="false"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        app:menu="@menu/leader_main_bottom_navigation"
        app:itemTextColor="@drawable/bottom_navigation_selector"
        app:itemTextAppearanceActive="@style/bottomActiveTextStyle"
        app:itemTextAppearanceInactive="@style/bottomInActiveTextStyle"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemIconSize="@dimen/frame_edge_distance"
        app:labelVisibilityMode="labeled"
        app:itemBackground="@color/white_background"/>
</androidx.appcompat.widget.LinearLayoutCompat>