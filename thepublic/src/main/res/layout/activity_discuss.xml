<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/alen_toolbar_layout"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_discuss_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                android:drawablePadding="@dimen/frame_eight_distance"
                android:background="@drawable/discuss_input_bg"
                android:minLines="4"
                android:gravity="top|start"
                android:layout_margin="@dimen/frame_eight_distance"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_small_size"
                android:textColor="@color/text_gray_color"
                android:text="@string/square_discuss_waring_hint"
                android:layout_marginStart="@dimen/frame_eight_distance"
                android:layout_marginEnd="@dimen/frame_eight_distance"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ok_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/discussTextWhiteStyle"
                android:text="@string/commit_hint"
                android:background="@drawable/afs_light_blue_bt_bg"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>