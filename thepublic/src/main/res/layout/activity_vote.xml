<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/alen_toolbar_layout"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/color_fff7ef"
        android:padding="@dimen/frame_four_distance"
        android:paddingBottom="@dimen/frame_four_distance">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vote_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_discuss_end"
            style="@style/disYellowSmallerDrawableStyle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vote_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:background="@drawable/blue_oval_20dp"
            style="@style/disWhiteSmallerStyle"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <allen.frame.widget.ScaleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:scale="0.256"
                android:background="@mipmap/ic_vote_bg"
                android:layout_marginStart="@dimen/frame_eight_distance"
                android:layout_marginEnd="@dimen/frame_eight_distance"
                android:layout_marginTop="@dimen/frame_four_distance"
                android:layout_marginBottom="@dimen/frame_four_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_vote_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/disWhiteBigStyle"
                    android:text="@string/vote_title"
                    android:layout_marginStart="@dimen/frame_110_distance"/>
            </allen.frame.widget.ScaleLinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vote_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/disBlackSmallStyle"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/frame_eight_distance"
                android:padding="@dimen/frame_eight_distance"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:background="@drawable/white_rectangle_8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/vote_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/voteYellowNormalStyle"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_background"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/discussTextWhiteStyle"
        android:background="@drawable/afs_light_blue_bt_bg"
        android:text="@string/commit_hint"
        android:layout_marginStart="@dimen/frame_32_distance"
        android:layout_marginEnd="@dimen/frame_32_distance"/>
</androidx.appcompat.widget.LinearLayoutCompat>