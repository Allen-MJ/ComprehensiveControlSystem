<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/alen_toolbar_layout"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_input_bg"
        android:minLines="3"
        android:gravity="start|top"
        style="@style/contentNormal8Style"
        android:layout_margin="@dimen/frame_eight_distance"
        android:textColor="@color/text_black_color"
        android:hint="@string/feedback_hint"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/commit_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/contentNormal8Style"
        android:layout_margin="@dimen/frame_32_distance"
        android:text="@string/commit_bt"
        android:textColor="@color/text_white_color"
        android:gravity="center"
        android:background="@drawable/frame_btn_selector"/>
</androidx.appcompat.widget.LinearLayoutCompat>