<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/alen_toolbar_layout"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_dw"
                    android:textColor="@color/text_gray_color"
                    style="@style/contentNormal8Style"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tip_dw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    style="@style/contentNormal8Style"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/frame_eight_distance"
                    android:drawableEnd="@mipmap/user_item_go"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_one_distance"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_edge_distance"
                android:layout_marginEnd="@dimen/frame_edge_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_fyr"
                    android:textColor="@color/text_gray_color"
                    style="@style/contentNormal8Style"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tip_fyr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    style="@style/contentNormal8Style"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:background="@color/transparent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_one_distance"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_edge_distance"
                android:layout_marginEnd="@dimen/frame_edge_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_phone"
                    android:textColor="@color/text_gray_color"
                    style="@style/contentNormal8Style"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tip_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    style="@style/contentNormal8Style"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:background="@color/transparent"
                    android:inputType="phone"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_one_distance"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_edge_distance"
                android:layout_marginEnd="@dimen/frame_edge_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_sex"
                    android:textColor="@color/text_gray_color"
                    style="@style/contentNormal8Style"/>

                <RadioGroup
                    android:id="@+id/tip_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">
                    <RadioButton
                        android:id="@+id/sex_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip_sex_male"
                        android:textColor="@color/text_black_color"
                        style="@style/contentNormal8Style"/>
                    <RadioButton
                        android:id="@+id/sex_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip_sex_female"
                        android:textColor="@color/text_black_color"
                        style="@style/contentNormal8Style"/>
                </RadioGroup>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_one_distance"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_edge_distance"
                android:layout_marginEnd="@dimen/frame_edge_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_grid"
                    android:textColor="@color/text_gray_color"
                    style="@style/contentNormal8Style"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tip_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    style="@style/contentNormal8Style"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/frame_eight_distance"
                    android:drawableEnd="@mipmap/user_item_go"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_one_distance"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_edge_distance"
                android:layout_marginEnd="@dimen/frame_edge_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="@dimen/frame_eight_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_address"
                    android:textColor="@color/text_gray_color"
                    style="@style/contentNormal8Style"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tip_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    style="@style/contentNormal8Style"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:background="@color/transparent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_one_distance"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_edge_distance"
                android:layout_marginEnd="@dimen/frame_edge_distance"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tip_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                style="@style/contentNormal8Style"
                android:hint="@string/tip_content"
                android:gravity="start|top"
                android:minLines="3"
                android:background="@color/transparent"
                android:layout_margin="@dimen/frame_eight_distance"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tip_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/frame_eight_distance"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tip_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frame_text_normal_size"
        android:textColor="@color/text_white_color"
        android:padding="@dimen/frame_edge_distance"
        android:text="@string/ok_bt"
        android:gravity="center"
        android:background="@drawable/frame_btn_selector"
        android:layout_marginStart="@dimen/frame_60_distance"
        android:layout_marginEnd="@dimen/frame_60_distance"
        android:layout_marginBottom="@dimen/frame_eight_distance"/>
</androidx.appcompat.widget.LinearLayoutCompat>