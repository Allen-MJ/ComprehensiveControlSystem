<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/frame_eight_distance"
    android:paddingEnd="@dimen/frame_eight_distance">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/voteItemTitleSmallStyle"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/voteItemTitleSmallStyle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_Edit"
            style="@style/voteItemOptionSmallStyle"
            android:paddingStart="@dimen/frame_four_distance"
            android:paddingEnd="@dimen/frame_four_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_rectangle_8dp"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>