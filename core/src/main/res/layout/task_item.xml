<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/frame_four_distance"
    android:background="@color/gray_line_color">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="@dimen/frame_eight_distance"
        android:foreground="?selectableItemBackground"
        app:cardElevation="@dimen/frame_one_distance"
        android:layout_marginBottom="@dimen/frame_two_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:visibility="gone"
                    style="@style/CoreMiddle8Style"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:lines="1"
                    style="@style/CoreSmall8Style"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    style="@style/CoreSmall8Style"
                    android:textColor="@color/text_color_red2pri_selector"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                style="@style/CoreSmaller8Style"
                android:maxLines="2"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    style="@style/CoreSmaller8Style"
                    android:visibility="visible"
                    android:text="@string/create_time"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray_color"
                    android:gravity="start"
                    android:paddingStart="@dimen/frame_four_distance"
                    android:maxLength="10"
                    style="@style/CoreSmaller8Style"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    style="@style/CoreSmaller8Style"
                    android:visibility="visible"
                    android:text="@string/to_object"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray_color"
                    android:gravity="start"
                    android:lines="1"
                    android:paddingStart="@dimen/frame_four_distance"
                    style="@style/CoreSmaller8Style"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>